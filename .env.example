# Telegram Bot Configuration
# Get token from @BotFather
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11

# Channel username with @ or channel ID (e.g., @your_channel or -1001234567890)
TELEGRAM_CHANNEL_ID=@your_channel_username

# Include link to original Telegram post at the end of VK post
INCLUDE_TELEGRAM_LINK=true

# VK Configuration
# Get access token from VK group settings
VK_ACCESS_TOKEN=vk1.a.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# VK group ID (without minus, e.g., 123456789)
VK_GROUP_ID=123456789

# Application Settings
# Number of posts to keep in cache (default: 20)
CACHE_SIZE=20

# Logging level: debug | info | warn | error
LOG_LEVEL=info

# Environment: development | production
NODE_ENV=development
